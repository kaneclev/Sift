{
    "scopeName": "source.sift",
    "patterns": [
      {
        "name": "keyword.control.sift",
        "match": "\\b(extract|from|where|or|not|and|text|contains|tag|attribute|targets|any)\\b"
      },
      {
        "name": "comment.line.double-slash.sift",
        "match": "//.*$"
      },
      {
        "name": "string.quoted.double.sift",
        "match": "\".*?\""
      },
      {
        "name": "variable.sift",
        "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
      },
      {
        "name": "variable.assignment.sift",
        "match": "->"
      },
      {
        "name": "endline.sift",
        "match": ";"
      },
      {
        "name": "colon.sift",
        "match": ":"
      }
    ],
    "fileTypes": ["sift"]
  }
  