{
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": "keyword.control.sift",
          "settings": {
            "foreground": "#5aabf7", // Orange for Sift keywords
            "fontStyle": ""
          }
        },
        {
          "scope": "comment.line.double-slash.sift",
          "settings": {
            "foreground": "#008000", // Green for comments in Sift
