          }
        },
        {
          "scope": "string.quoted.double.sift",
          "settings": {
            "foreground": "#50c06c", // Blue for strings in Sift
            "fontStyle": ""
          }
        },
        {
          "scope": "variable.sift",
          "settings": {
            "foreground": "#ffffff", // Purple for variables in Sift
            "fontStyle": ""
          }
        },
        {
          "scope": "variable.assignment.sift",
          "settings": {
            "foreground": "#c20e0e", // Purple for variables in Sift
            "fontStyle": ""
          }
        },
        {
          "scope": "endline.sift",
          "settings": {
            "foreground": "#c20e0e", // Purple for variables in Sift
            "fontStyle": ""
          }
        },
        {
          "scope": "colon.sift",
